<script src="/js/chat.js"></script>

    <!-- footer ends -->



        <script>
        const previous_orders = document.querySelector('.previous_orders')
        const previous_orders_section = document.querySelector('.previous_orders_section')
        previous_orders.addEventListener('click', () => {
            previous_orders_section.classList.add('.myaccount-animate')
           
        })
    </script>

