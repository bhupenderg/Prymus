                <input type="text" name="country" id="manager-register-country" placeholder="Country" required>
                <small id="small-register-managerCountry">Error Message</small>

                <input type="submit" name="register-manager" value="Register">
            </form>
        </div>



        <!-- Login Form -->

        <div class="login-form-container" id="manager-login-form-container">
            <h3>Not Registered? <span>Register Here!</span></h3>
            <h1>Manager Login Here!</h1>
            <form action="/comingsoon" method="POST">
                
                <input type="email" name="email" id="manager-login-name" placeholder="Enter Email" required>
                <small id="small-login-managerEmail">Error Message</small>

                <input type="password" name="password" id="manager-login-password" placeholder="Enter Password" required>
                <small id="small-login-managerPassword">Error Message</small>

                
                <input type="submit" name="login-manager" value="Login">
            </form>
        </div>

    </div>


    <script src="/js/client-register.js"></script>
    <script src="/js/validateforms/validateUserForms.js"></script>
    <script src="/js/header_updated_s.js"></script>
    
</body>
