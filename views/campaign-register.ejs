<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Prymus- Technical Blogs">
    <meta name="author" content="Prymus">
    <link rel="icon" href="/images/prymus.png" type="image/gif" sizes="16x16">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>

     <link rel="stylesheet" href="/css/header_updated_n.css">
    <link rel="stylesheet" href="/css/header_updated_s.css">
    <link rel="stylesheet" href="/css/contact.css">
    <link rel="stylesheet" href="/css/campaign-register.css">
    <link rel="stylesheet" href="/css/footer.css">
    <title>PRYMUS</title>

       <!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-180719275-1"></script>
<script>
  window.dataLayer = window.dataLayer || [];
  function gtag(){dataLayer.push(arguments);}
  gtag('js', new Date());

  gtag('config', 'UA-180719275-1');
</script>

    
</head>
<body>

    <div class="header-main">
        <% if (user) { %>
            <%- include ('includes/header_updated_s.ejs') %>     
        <% } else { %>
            <div class="header-main">
                <%- include ('includes/header_updated_n.ejs') %>
            </div>     
        
        <% } %>
    </div>     


    <!-- contact heading -->

    <div class="form-contact">
        <div class="form-contact-heading">
            <h1>tell us about your project</h1>
        </div>
        <div class="contact-form">
            <form action="/campaignregister" method="POST" class="campaign-form" enctype="multipart/form-data">

                <input type="tel" name="whatsapp_no" class="whatsapp_no" placeholder="Whatsapp No">
                <input type="text" name="company_name" class="company_name" placeholder= "Company Name">
                <input type="text" name="website" class="website" placeholder="Company Website">
                <input type="text" name="position" class="position" placeholder=" Position">
                <label for="Category">Business Category:</label>
                <select class="form-control" name="category" style="width: 21%; height: 3.5%;">
                    <option value="Doctor">Doctor</option>
                    <option value="Shop Owner">Shop Owner</option>
                    <option value="Dentist">Dentist</option>
                    <option value="Businessman">Businessman</option>
                    <option value="Book Seller">Book Seller</option>
                    <option value="Electronics">Electronics</option>
                    <option value="Digital Marketing">Digital Marketing</option>
                    <option value="I.T Services">I.T Services</option>
                    
                  </select>
                <label for="Facebook">Facebook Marketing</label>
                <input type="range" min="0" max="10000" value="5000" name="facebook_marketing" class="facebook_marketing" id="facebook_marketing">
                <output for="range" class="output-facebook"></output>
                
                <label for="Linkedin">Linkedin Marketing</label>
                <input type="range" min="0" max="10000" value="5000" name="linkedin_marketing" class="linkedin_marketing" id="linkedin_marketing">
                <output for="range" class="linkedin_marketing"></output>
                
                <label for="Instagram">Instagram Marketing</label>
                <input type="range" min="0" max="10000" value="5000" name="instagram_marketing" class="instagram_marketing" id="instagram_marketing">
                <output for="range" class="instagram_marketing"></output>
                
                <label for="Email">Email Marketing</label>
                <input type="range" min="0" max="10000" value="5000" name="email_marketing" class="email_marketing" id="email_marketing">
                <output for="range" class="email_marketing"></output>
                
                <label for="seo">SEO</label>
                <input type="range" min="0" max="10000" value="5000" name="seo" class="seo" id="seo">
                <output for="range" class="seo"></output>
                
                
                <label for="smo">SMO</label>
                <input type="range" min="0" max="10000" value="5000" name="smo" class="smo" id="smo">
                <output for="range" class="smo"></output>

                <label for="files">Upload logo/ creatives:</label>

                <input type="file" name="image" id="image" class="image">

                
                
                <input type="submit" name="submit" value="Submit!">
                
            </form>
        </div>

        <div class="total-container">
            <h1 class="total_amount"></h1>
        </div>
        
    </div>

    

    
    
    <!-- footer starts -->

    <%- include('footer.ejs') %>

    <!-- footer ends -->
    
<script>
    
    $('#facebook_marketing').on("input", function() {
    $('.output-facebook').val(this.value );
    }).trigger("change");

    
    $('#linkedin_marketing').on("input", function() {
    $('.linkedin_marketing').val(this.value );
    }).trigger("change");

    $('#instagram_marketing').on("input", function() {
    $('.instagram_marketing').val(this.value );
    }).trigger("change");

    $('#email_marketing').on("input", function() {
    $('.email_marketing').val(this.value );
    }).trigger("change");

    $('#seo').on("input", function() {
    $('.seo').val(this.value );
    }).trigger("change");

    $('#smo').on("input", function() {
    $('.smo').val(this.value );
    }).trigger("change");

    
</script>
<script src="/js/campaign-register.js"></script> 
<script src="/js/header_updated_n.js"></script>
</body>